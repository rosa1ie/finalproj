{
  "manifest_version": 2,
  "name": "Privacy Detector",
  "version": "1.0",
  "description": "Provides Privacy Checkup data when available (from Facebook and Instagram) and deduces personal data from webrequests sent by websites in general.",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*",
    "cookies",
    "activeTab",
    "identity"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
